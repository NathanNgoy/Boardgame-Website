extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div
      label(for='name') Name:
      br
      input(type='text', placeholder='Science, Mystery, Strategy, ect.' name='name' value=(undefined===category ? '' : category.name) required="true")
    br
    button(type='submit') Submit

  if errors 
   ul
    for error in errors
     li!= error.msg