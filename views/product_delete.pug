extends layout

block content
    h1 #{title}: 

    br
    h2 #{boardgame.name}
    p= boardgame.description

    if error
        p error
  
    p Do you really want to delete this boardgame?
    
    form(method='POST' action='')
        input#boardgameid(type='hidden',name='id', required='true', value=boardgame._id )
        br
        button.btn.btn-primary(type='submit') Delete